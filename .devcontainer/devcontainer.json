{
  "image": "ghcr.io/stdcout1/ihp-dev-prebuilt:latest",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.profiles.linux": {
          "nix-bash": {
            "path": "/bin/bash",
            "args": [
              "-lc",
              "nix develop"
            ]
          }
        },
        "terminal.integrated.defaultProfile.linux": "nix-bash"
      },
      "extensions": [
        "bbenoist.nix",
        "haskell.haskell",
        "s0kil.vscode-hsx",
        "mkhl.direnv",
        "vigoo.stylish-haskell"
      ]
    }
  }
}
